---
// Components
import Layout from "layouts/LayoutLanding.astro";
import GetTickets from "components/GetTickets.astro";
import HeroText from "components/HeroText.astro";
import AllSpeakers from "components/Speakers.astro";
---

<Layout
  title="Speakers â€“ GOSIM Hangzhou 2025"
  description="GOSIM Hangzhou 2025 is a gathering of open-source AI projects, developers, researchers, and industry sponsors to share knowledge, learn from each other, and collaborate."
  navBackground="light"
  pageTransitionName="Speakers"
>
  <section
    class="section default-header"
    style="background-image: linear-gradient(rgba(239, 239, 221, 0.92), rgba(239, 239, 221, 0.92)), url('/images/speakers/word_cloud.png'); background-size: cover; background-position: center bottom;"
    data-theme-section="light"
    data-bg-section="lightgray"
    data-scroll-section
>
    <div class="container">
        <div class="row grid">
            <div class="border-bottom" />

            <div class="col col-title">
                <div class="col-row col-row-title">
                    <h1 style="margin-bottom: 2rem; color: #000;">Keynote & Track Speakers</h1>
                </div>
            </div>

            <div class="col col-text">
                <div class="col-row styled-content">
                    <p style="color: #000;">From foundational models to cutting-edge research, our speakers will cover a wide range of topics to help you stay at the forefront of AI innovation.</p>
                </div>
            </div>
        </div>
    </div>
</section>

  <AllSpeakers />

  <GetTickets
    title="Grab your GOSIM Hangzhou ticket"
    location="Hangzhou, China"
    date="September 13-14, 2025"
    text="Secure your spot today at GOSIM Hangzhou 2025. Collaborate with innovators, engage with industry pioneers, and be part of shaping the future of open-source technology."
    ctaButton={{
      text: "Get tickets",
      link: "/tickets",
      openInNewTab: false,
    }}
  />
</Layout>
