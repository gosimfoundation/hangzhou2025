---
// Components
import Layout from "layouts/LayoutLanding.astro";
import Hero from "components/Hero.astro";
import Intro from "components/Intro.astro";
import Statistics from "components/Statistics.astro";
import Tracks from "components/Tracks.astro";
import TextAndImage from "components/TextAndImage.astro";
import PreviousEvents from "components/PreviousEvents.astro";
import GetTickets from "components/GetTickets.astro";
import VenueInfo from "components/VenueInfo.astro";
import TextAndSponsors from "components/TextAndSponsors.astro";

// Images
import Placeholder1 from "images/homepage/stats1.jpeg";
import Placeholder2 from "images/homepage/stats2.jpg";
import Placeholder3 from "images/homepage/stats3.png";
import SpotlightBlue from "images/homepage/spotlight-hg.svg";
import RustGlobalWhite from "images/homepage/Rust-Global-white.svg";

import GosimShanghai from "images/homepage/gosim-shanghai.png";
import GosimDelft from "images/homepage/gosim-delft.png";
import GosimBeijing from "images/homepage/gosim-beijing.png";
import GosimParis from "images/homepage/gosim-paris-min.png";
---

<Layout
  title="GOSIM Hangzhou 2025"
  description="GOSIM Hangzhou. Coming soon."
  navDarkMode={true}
  navBackground="header-home"
  pageTransitionName="Home"
>
  <Hero
    date="September 13-14, 2025"
    location="Hangzhou, China"
    links={[
      {
        text: "Call for Proposals",
        link: "https://cfp.gosim.org/",
        openInNewTab: true,
      },
    ]}
  />
  <!--   <CardsSponsors
    title="Proudly Sponsored By"
    sponsors={[
      {
        name: "1ms.ai",
        image: "/images/sponsors/1msai.png",
      },
      {
        name: "Huawei",
        image: "/images/sponsors/huawei.png",
      },
      {
        name: "CSDN",
        image: "/images/sponsors/csdn.png",
      },
    ]}
  /> -->
  <div
    class="section-wrap"
    id="intro"
    data-theme-section="light"
    data-bg-section="lightgray"
  >
    <Intro>
      <h1 class="h3 light split-words animate-read">
        Join us at GOSIM Hangzhou 2025, China's premier open-source conference,
        where innovation, collaboration, and technological breakthroughs
        converge.
      </h1>
    </Intro>

    <Statistics
      stats={[
        {
          title: "1500",
          subtitle: "Attendees",
          image: Placeholder1,
          imageAlt: "",
          hasPlus: true,
        },
        {
          title: "100",
          subtitle: "Speakers",
          imageAlt: "",
          image: Placeholder2,
          hasPlus: true,
        },
        {
          title: "2",
          subtitle: "Exhilarating days",
          imageAlt: "",
          image: Placeholder3,
        },
      ]}
    />
  </div>
  <VenueInfo
    subtitle="Location"
    title="Hangzhou, China"
    location="Where Innovation Meets History"
    text="Experience GOSIM Hangzhou 2025 in a city renowned for its historical legacy and vibrant technological future. Hangzhou, a historical gem and modern tech hub, offers the perfect backdrop for inspiration, networking, and breakthrough innovations."
    image="/images/homepage/hangzhoubg.png"
  />

  <Tracks
    id="tracks"
    title="5 Cutting-Edge Tracks"
    list={[
      {
        title: "AI Models & Infra",
        text: `Foundation models, edge inference, generative AI, tools for AI training and beyond.`,
      },
      {
        title: "Embodied AI",
        text: `Apply AI in the real world, from humanoid robotics to autonomous systems.`,
      },
      {
        title: "Agentic Web",
        text: `Decentralized applications, identity, privacy-enhanced technologies, and collaborative platforms.`,
      },
      {
        title: "Apps & Agents",
        text: `Cross-platform and AI-assisted app dev, Rust GUI apps, WebAssembly, and super-app ecosystems.`,
      },
      {
        title: "AI Next",
        text: `AI Enabled Use Cases, AI Devices, Human AI Interfaces, AI Platforms, and AI Governnances`,
      },
      // {
      //   title: "Rust",
      //   text: `Rust Global and Rust China conferences, focusing on the Rust programming language and its applications.`,
      // },
    ]}
    ctaButton={{
      text: "Schedule Coming Soon",
      link: "",
    }}
  />

  <TextAndImage
    id="rust-global"
    title="Co-located Rust Global Conference"
    text="Rust Global is the first Rust Foundation-hosted gathering dedicated to the use of Rust in global leadership settings."
    image={RustGlobalWhite}
    imageAlt="Rust Global"
    dataBgSection="dark"
    dataThemeSection="dark"
  />
  <TextAndSponsors
    title="Sponsorship Opportunities"
    text="Reach thousands of people in your target audience by becoming a supporting organization at GOSIM Hangzhou 2025."
    text2="*Previous GOSIM conference sponsors shown for illustration purposes only."
    ctaButton={{
      text: "Contact Us",
      link: "mailto:sponsor@gosim.org",
    }}
    logos={[
      {
        image: "openwallet.png",
        imageAlt: "OpenWallet logo",
      },
      {
        image: "ajtis.jpg",
        imageAlt: "AJTIS logo",
      },
      {
        image: "aifc.png",
        imageAlt: "AIFC logo",
      },
      {
        image: "lf-gen-ai.png",
        imageAlt: "Linux Foudnation logo",
      },
      {
        image: "eclipse-foundation.png",
        imageAlt: "Eclipse Foundation logo",
      },
      {
        image: "osi.png",
        imageAlt: "Open Source Initiative logo",
      },
    ]}
  />
  <TextAndImage
    id="spotlight"
    title="GOSIM Spotlight Program"
    text="Witness the future of technology first-hand through the GOSIM Spotlight initiative, highlighting exceptional innovations aligned with each conference track. This program showcases pioneering open-source projects that push boundaries, inspire creativity, and demonstrate real-world impact."
    image={SpotlightBlue}
    imageAlt="Gosim Spotlight badge"
    dataBgSection="light"
    dataThemeSection="light"
    ctaButton={{
      text: "Apply now",
      link: "https://spotlight.gosim.org/",
      openInNewTab: true,
    }}
  />

  <PreviousEvents
    title="Previous Events"
    events={[
      {
        title: "GOSIM Paris",
        date: "May 6-7, 2025",
        description:
          "Over 1000 attendees and luminaries delved into the multifaceted development of AI for our 2-day GOSIM Paris event in the city of lights.",
        image: GosimParis,
        link: "https://paris2025.gosim.org/",
      },
      {
        title: "GOSIM Beijing",
        date: "October 17-18, 2024",
        description:
          "Attracted more than 1700 attendees, GOSIM Beijing is by far the largest GOSIM event ever in the historical capital of China.",
        image: GosimBeijing,
        link: "https://china2024.gosim.org/",
      },
      {
        title: "GOSIM Delft",
        date: "June 6-7, 2024",
        description:
          "GOSIM Delft was a two-day event with 3 tracks that brought together 1200 attendees from not only the Netherlands, but all around the world.",
        image: GosimDelft,
        link: "https://europe2024.gosim.org/",
      },
      {
        title: "GOSIM Shanghai",
        date: "September 23-24, 2023",
        description:
          "Where everything started, GOSIM conference and workshop focused on championing and enhancing open-source contributions.",
        image: GosimShanghai,
        link: "https://conference2023.gosim.org/",
      },
    ]}
  />

  <GetTickets
    title="Join the open-source revolution!"
    location="Hangzhou, China"
    date="September 13-14, 2025"
    text="Secure your spot today at GOSIM Hangzhou 2025. Collaborate with innovators, engage with industry pioneers, and be part of shaping the future of open-source technology."
  />
</Layout>
