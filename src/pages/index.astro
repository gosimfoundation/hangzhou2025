  <div
    class="section-wrap"
    id="intro"
    data-theme-section="light"
    data-bg-section="lightgray"
  >
    <Intro>
      <h1 class="h3 light split-words animate-read">
        Join us at GOSIM Hangzhou 2025, China's premier open-source conference,
        where innovation, collaboration, and technological breakthroughs
        converge.
      </h1>
    </Intro>

    <Statistics
      stats={[
        {
          title: "1500",
          subtitle: "Attendees",
          image: Placeholder1,
          imageAlt: "",
          hasPlus: true,
        },
        {
          title: "100",
          subtitle: "Speakers",
          imageAlt: "",
          image: Placeholder2,
          hasPlus: true,
        },
        {
          title: "2",
          subtitle: "Exhilarating days",
          imageAlt: "",
          image: Placeholder3,
        },
      ]}
    />
  </div>

  <Tracks
    id="tracks"
    title="5 Cutting-Edge Tracks"
    list={[
      {
        title: "AI Models & Infra",
        text: `Foundation models, edge inference, generative AI, tools for AI training and beyond.`,
      },
      {
        title: "Embodied AI",
        text: `Apply AI in the real world, from humanoid robotics to autonomous systems.`,
      },
      {
        title: "Agentic Web",
        text: `Decentralized applications, identity, privacy-enhanced technologies, and collaborative platforms.`,
      },
      {
        title: "Apps & Agents",
        text: `Cross-platform and AI-assisted app dev, Rust GUI apps, WebAssembly, and super-app ecosystems.`,
      },
      {
        title: "AI Next",
        text: `AI Enabled Use Cases, AI Devices, Human AI Interfaces, AI Platforms, and AI Governnances`,
      },
      // {
      //   title: "Rust",
      //   text: `Rust Global and Rust China conferences, focusing on the Rust programming language and its applications.`,
      // },
    ]}
    ctaButton={{
      text: "Schedule Coming Soon",
      link: "",
    }}
  />

  <VenueInfo
    subtitle="Venue"
    title={"Hangzhou Platinum Hanjue Hotel\n杭州白金汉爵酒店"}
    location="Hangzhou, China - Where Innovation Meets History"
    text="Experience GOSIM Hangzhou 2025 in a city renowned for its historical legacy and vibrant technological future. Hangzhou, a historical gem and modern tech hub, offers the perfect backdrop for inspiration, networking, and breakthrough innovations."
    image="/images/homepage/hangzhoubg.png"
  />

  <Marquee />

  <FeaturedSpeakers
    title="Featured Speakers"
    ctaButton={{
      text: "More speakers",
      link: "/speakers/",
    }}
  />

  <TextAndImageReverse
    id="proposals"
    title="Call for Proposals"
    text="We’re looking for bold ideas and fresh voices to shape the future. If you have insights on cutting-edge technology, emerging trends, or transformative practices, we want to hear from you. Submit a proposal to speak and join a lineup of innovators, thought leaders, and changemakers pushing the boundaries of what’s next."
    image={Proposals}
    imageAlt="GOSIM Hangzhou"
    dataBgSection="light"
    dataThemeSection="light"
    ctaButton={{
      text: "Apply now",
      link: "https://cfp.gosim.org/",
      openInNewTab: true,
    }}
  />
  <Timeline
    events={[
      {
        date: "May 18, 2025",
        title: "Proposal applications open",
      },
      {
        date: "August 18, 2025",
        title: "Proposal applications close",
      },
      {
        date: "September 13, 2025",
        title: "GOSIM Hangzhou kicks off!",
      },
      {
        date: "September 14, 2025",
        title: "GOSIM Hangzhou concludes",
      },
    ]}
  />
  <TextAndImage
    id="rust-global"
    title="Co-located RustGlobal & RustChinaConf"
    text="RustGlobal is the first Rust Foundation-hosted gathering dedicated to the use of Rust in global leadership settings."
    image={RustGlobalWhite}
    imageAlt="Rust Global"
    dataBgSection="dark"
    dataThemeSection="dark"
    ctaButton={{
      text: "RustGlobal + RustChinaConf 2025",
      link: "https://rustcc.cn/2025conf/",
      openInNewTab: true,
    }}
  />
